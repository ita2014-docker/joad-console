<h1>コンテナ一覧</h1>

<%= form_tag('/containers/index') do %>

<table>
  <tr>
    <th>&nbsp;</th>
    <th>コンテナID</th>
    <th>イメージ</th>
    <th>コマンド</th>
    <th>稼動状態</th>
    <th>IPアドレス</th>
    <th>ポートフォワード</th>
    <th>作成日</th>
  </tr>

<% @containers.each do |container| %>
  <tr>
    <td>
      <%= check_box_tag 'containers[id][]', container.get_short_id, false, {} %>
    </td>
    <td><%= container.get_short_id %></td>
    <td><%= container.get_image_name %></td>
    <td><%= container.get_command %></td>
    <td><%= container.get_state %></td>
    <td><%= container.get_container_ipaddr %></td>
    <td><%= container.get_port_forwarding %></td>
    <td><%= container.get_created %></td>
  </tr>

<% end %>

<%= submit_tag("起動", :name => "start") %>
<%= submit_tag("停止", :name => "stop") %>
<%= submit_tag("削除", :name => "rm") %>

<% end -%>

</table>
