<div class="modal fade" id="addApplicationDialog" role="dialog"
     tabindex="-1" aria-labelledby="addApplicationLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="addApplicationLabel"><%= t('application.dialog.add') %></h4>
      </div>
      <%= form_for(@new_app, url: applications_create_path, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, t('application.column.name'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, t('application.column.description'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :description, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :repository_url, t('application.column.repository_url'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :repository_url, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t('button.cancel') %>
          </button>
          <%= f.submit t('button.add'), class: "btn btn-primary" %>
        </div>
      <%- end %>
    </div>
  </div>
</div>
