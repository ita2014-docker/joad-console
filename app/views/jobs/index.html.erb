<%- content_for :title do %>ジョブ一覧<% end %>

<div class="container">
  <h2>ジョブ一覧</h2>

  <ul class="list-inline">
    <li>
      <button type="button" class="btn btn-primary"
              data-toggle="modal" data-target="#addJobDialog">
        追加
      </button>
    </li>
  </ul>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>名前</th>
        <th>説明</th>
        <th>リポジトリ</th>
        <th>最終ビルド日時</th>
      </tr>
    </thead>

    <tbody>
      <%- @jobs.each do |job| %>
      <tr>
        <td><%= job_status_icon(job.status) %> <%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.repository_url %></td>
        <td><%= job.last_build %></td>
      </tr>
      <%- end %>
    </tbody>
  </table>
</div>

<%= render partial: 'add_job_dialog' %>
