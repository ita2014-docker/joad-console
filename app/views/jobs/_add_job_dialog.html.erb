<div class="modal fade" id="addJobDialog" role="dialog"
     tabindex="-1" aria-labelledby="addJobLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="addJobLabel">新しいジョブの追加</h4>
      </div>
      <%= form_for(@new_job, url: jobs_create_path, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, '名前', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, '説明', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :description, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :repository_url, 'リポジトリURL', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :repository_url, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            キャンセル
          </button>
          <%= f.submit '追加', class: "btn btn-primary" %>
        </div>
      <%- end %>
    </div>
  </div>
</div>
