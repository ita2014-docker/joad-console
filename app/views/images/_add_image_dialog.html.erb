<div class="modal fade" id="addImageDialog" role="dialog"
     tabindex="-1" aria-labelledby="addImageLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="addImageLabel"><%= t('image.dialog.add') %></h4>
      </div>
      <%= form_for(@new_image, url: images_create_path, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :repository, t('image.column.repository'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :repository, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :tag, t('image.column.tag'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :tag, class: 'form-control', placeholder: 'latest' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t('button.cancel') %>
          </button>
          <%= f.submit t('button.add'), class: "btn btn-primary" %>
        </div>
      <%- end %>
    </div>
  </div>
</div>
