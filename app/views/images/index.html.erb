<h1>イメージ一覧</h1>

<table>
  <tr>
    <th>ID</th>
    <th>リポジトリ</th>
    <th>タグ</th>
    <th>サイズ</th>
    <th>作成日</th>
  </tr>

<%- @images.each do |image| %>
  <%- image.repo_tags.each do |rt| %>
  <tr>
    <td><%= image.short_id %></td>
    <td><%= rt[:repo] %></td>
    <td><%= rt[:tag] %></td>
    <td><%= number_to_human_size(image.size) %></td>
    <td><%= image.created %></td>
  </tr>
  <%- end %>
<%- end %>
</table>
