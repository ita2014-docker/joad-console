<%= link_to "イメージ一覧", :controller => "images", :action => "index" %>
<%= link_to "コンテナ一覧", :controller => "containers", :action => "index" %>

<hr>

<h1>イメージ一覧</h1>

<table>
  <tr>
    <th>ID</th>
    <th>リポジトリ</th>
    <th>タグ</th>
    <th>サイズ</th>
    <th>作成日</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.get_short_id %></td>
    <td><%= image.get_repository %></td>
    <td><%= image.get_tag %></td>
    <td><%= number_to_human_size(image.get_size) %></td>
    <td><%= image.get_created %></td>
  </tr>

<% end %>

</table>
