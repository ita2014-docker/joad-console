<h1>イメージ一覧</h1>

<%= form_for(@new_image, url: images_create_path) do |f| %>
  <%= f.label :repo_tags, 'タグ' %>
  <%= f.text_field :repo_tags, name: 'joad_image[repo_tags][]' %>
  <%= f.submit '追加' %>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>リポジトリ</th>
    <th>タグ</th>
    <th>サイズ</th>
    <th>作成日</th>
  </tr>

<%- @images.each do |image| %>
  <%- image.repo_tags.each do |rt| %>
  <tr>
    <td><%= image.short_id %></td>
    <td><%= rt[:repo] %></td>
    <td><%= rt[:tag] %></td>
    <td><%= number_to_human_size(image.size) %></td>
    <td><%= image.created %></td>
  </tr>
  <%- end %>
<%- end %>
</table>
